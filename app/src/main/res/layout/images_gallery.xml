    <RelativeLayout
        android:id="@+id/layout_dir_chooser"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/edt_dir_path"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/btn_choose"
            android:background="@drawable/imageborder"
            android:focusable="false"
            android:inputType="none"
            android:padding="2dp"
            android:textSize="12sp"
            android:maxLines="1"
             />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_choose"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:background="@color/seagreen"
            android:text="Choose"
            android:textStyle="bold"
            />

    </RelativeLayout>


    <view
        android:id="@+id/recyclerview"
        class="androidx.recyclerview.widget.RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_dir_chooser" />

    <TextView
        android:id="@+id/txt_empty_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_barcodes_to_show"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
       />

<!--</LinearLayout>-->
</RelativeLayout>