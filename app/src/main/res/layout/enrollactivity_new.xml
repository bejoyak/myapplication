<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudlight"
    android:orientation="vertical"
    tools:context=".activities.EnrollActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_full_button">

        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/CustomActionBar" />
        <!--                <include-->
        <!--                    layout="@layout/app_bar_main"-->
        <!--                    android:layout_width="match_parent"-->
        <!--                    android:layout_height="match_parent" />-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?actionBarSize"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monsterrat_font_family"
                            android:text="Demographic"
                            android:textSize="20dp"
                            android:textStyle="bold">

                        </TextView>

                        <!--                        <TextView-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="match_parent"-->
                        <!--                            android:layout_marginTop="10dp"-->
                        <!--                            android:text="Form Filling Selection"-->
                        <!--                            android:fontFamily="@font/monsterrat_font_family"-->
                        <!--                            />-->

                        <RadioGroup
                            android:id="@+id/rad_group_choose_from"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rad_btn_Enter_Details"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:text="Enroll Manually" />

                            <RadioButton
                                android:id="@+id/rad_btn_CaptureID"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:text="Enroll using IDcard" />
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LL_Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll1"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout style="@style/InputTextLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_name"
                                style="@style/InputEditText"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:hint="Full Name"
                                android:inputType="textCapWords" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout style="@style/InputTextLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_Dob"
                                style="@style/InputEditText"
                                android:focusable="false"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:hint="Date Of Birth"
                                android:maxLength="50" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout style="@style/InputTextLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_country"
                                style="@style/InputEditText"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:hint="Country"
                                android:inputType="textCapCharacters"
                                android:maxLength="50" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout style="@style/InputTextLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_email"
                                style="@style/InputEditText"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:hint="Email"
                                android:inputType="textEmailAddress" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Spinner
                            android:id="@+id/sp_gender"
                            style="@style/SpinnerLayout"
                            android:entries="@array/gender_list"
                            android:fontFamily="@font/monsterrat_font_family" />


                        <Spinner
                            android:id="@+id/sp_blood_group"
                            style="@style/SpinnerLayout"
                            android:entries="@array/blood_group_list"
                            android:fontFamily="@font/monsterrat_font_family" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/backgroundre_small"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="20dp"
                                    android:background="@drawable/circile"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/btn_capture_face"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/cam_new_res"
                                        android:gravity="center"
                                        android:onClick="OnCaptureFace"></Button>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="15dp"
                                    android:text="Capture Selfie"
                                    android:textSize="15dp"
                                    android:textStyle="bold"></TextView>
                                </LinearLayout>

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/img_face"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/imageborder_gold"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/backgroundre_small"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="20dp"
                                    android:background="@drawable/circile"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/load_image_captureID"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/id_new_res"
                                        android:gravity="center"
                                        android:onClick="captureIDCard"></Button>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="15dp"
                                    android:text="Capture ID Card"
                                    android:textSize="15dp"
                                    android:textStyle="bold"></TextView>
                                <Button
                                    android:id="@+id/btn_rotateright_id_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/rotateright_res"
                                    android:gravity="center"
                                    android:layout_marginLeft="20dp"
                                    android:onClick="Onrotateright"
                                    android:visibility="gone"></Button>

                            </LinearLayout>

                        </RelativeLayout>


                        <ImageView
                            android:id="@+id/loadedImage_captureID"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/imageborder_gold"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:visibility="visible" />


                    </LinearLayout>
                </RelativeLayout>
////////////////////////////////////////////////////////////////
                <LinearLayout
                    android:id="@+id/LL_CaptureID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/backgroundre_small"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/circile"
                                android:gravity="center"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btn_load_image_captureID_inidcard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/id_new_res"
                                    android:gravity="center"
                                    android:onClick="captureIDCard_inidcard"></Button>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:text="Capture ID Card"
                                android:textSize="15dp"
                                android:textStyle="bold"></TextView>

                        </LinearLayout>

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/loadedImage_captureID_inidcard"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/imageborder_gold"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/monsterrat_font_family"
                        android:gravity="center"
                        android:textStyle="bold" />

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/results_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_above="@+id/btn_scan_doc"
                        android:layout_marginTop="20dp"></androidx.core.widget.NestedScrollView>


                    <LinearLayout
                        android:id="@+id/LL_Details_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll1"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/name_hint"
                            style="@style/InputTextLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_name_card"
                                style="@style/InputEditText"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:hint="Full Name"
                                android:inputType="textCapWords" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/dob_hint"
                            style="@style/InputTextLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_Dob_card"
                                style="@style/InputEditText"
                                android:focusable="false"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:hint="Date Of Birth"
                                android:maxLength="50" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/country_hint"
                            style="@style/InputTextLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_country_card"
                                style="@style/InputEditText"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:hint="Country"
                                android:inputType="textCapCharacters"
                                android:maxLength="50" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/email_hint"
                            style="@style/InputTextLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_email_card"
                                style="@style/InputEditText"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:hint="Email"
                                android:inputType="textEmailAddress" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!--        <Spinner-->
                        <!--            android:id="@+id/sp_gender"-->
                        <!--            style="@style/SpinnerLayout"-->
                        <!--            android:entries="@array/gender_list"-->
                        <!--            android:fontFamily="@font/monsterrat_font_family"-->
                        <!--            />-->


                        <!--        <Spinner-->
                        <!--            android:id="@+id/sp_blood_group"-->
                        <!--            style="@style/SpinnerLayout"-->
                        <!--            android:entries="@array/blood_group_list"-->
                        <!--            android:fontFamily="@font/monsterrat_font_family"-->
                        <!--            />-->

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_gender_hint"
                            style="@style/InputTextLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_gender_card"
                                style="@style/InputEditText"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:hint="Gender"
                                android:maxLength="50" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_bloodgroup_hint"
                            style="@style/InputTextLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_blood_group_card"
                                style="@style/InputEditText"
                                android:fontFamily="@font/monsterrat_font_family"
                                android:hint="BloodGroup"
                                android:inputType="textEmailAddress" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Spinner
                            android:id="@+id/sp_gender_card"
                            style="@style/SpinnerLayout"
                            android:entries="@array/gender_list"
                            android:fontFamily="@font/monsterrat_font_family" />


                        <Spinner
                            android:id="@+id/sp_blood_group_card"
                            style="@style/SpinnerLayout"
                            android:entries="@array/blood_group_list"
                            android:fontFamily="@font/monsterrat_font_family" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/backgroundre_small"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/circile"
                                android:gravity="center"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btn_capture_face_inidcard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/cam_new_res"
                                    android:gravity="center"
                                    android:onClick="OnCaptureFace_inIdcard"></Button>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:text="Capture Selfie"
                                android:textSize="15dp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img_face_inidcard"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/imageborder_gold"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_enroll"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/btn_lg_backdrop"
                        android:drawableLeft="@drawable/enroll_withnew_bt_res"
                        android:drawablePadding="-40sp"
                        android:fontFamily="@font/monsterrat_font_family"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="ENROLL"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>